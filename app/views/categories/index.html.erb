<% if user_signed_in? and current_user.admin? %>
  <p style="color: green"><%= notice %></p>
  <%= link_to "New category", new_category_path, class: "btn btn-success"  %>
<% end %>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
</div>
