<% if user_signed_in? and current_user.admin? %>
  <p style="color: green"><%= notice %></p>

  <div>
    <%= link_to "Edit this category", edit_category_path(@category),  class:'btn btn-primary' %>
    <%= link_to "Back to categories", categories_path,  class:'btn btn-primary' %>

    <%= button_to "Destroy this category", @category, method: :delete,  class:'btn btn-danger' %>
  </div>
<% end %>

<%= render @category %>

<% @movies.each do |movie| %>
  <%= render movie %>
<% end %>

<%= paginate @movies %>


