<% if user_signed_in? and current_user.admin? %>
  <p style="color: green"><%= notice %></p>

  <%= link_to "New movie", new_movie_path, class: "btn btn-success" %>
<% end %>

<h1>Movies</h1>

<div id="movies">
  <% @movies.each do |movie| %>
    <%= render movie %>
  <% end %>
</div>


<%= paginate @movies %>